<Window x:Class="MVVMAppie.SectionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit section" Height="302.759" Width="389.298"
        DataContext="{Binding SectionManager, Source={StaticResource Locator}}" >
    <Grid>
        <Label Content="Pas afdeling aan" HorizontalAlignment="Left" Margin="114,26,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SectionNameTB" HorizontalAlignment="Left" Height="23" Margin="114,106,0,0" TextWrapping="Wrap" Text="{Binding TextEdit}" VerticalAlignment="Top" Width="149"/>
        <Button Command="{Binding EditSectionCommand}"  x:Name="AddSectionBtn" Content="Pas afdeling aan" HorizontalAlignment="Left" Margin="131,191,0,0" VerticalAlignment="Top" Width="110" Height="38"/>

    </Grid>
</Window>

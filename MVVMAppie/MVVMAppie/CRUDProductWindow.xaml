<Window x:Class="MVVMAppie.CRUDProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRUDProductWindow" Height="446.209" Width="331.408"
        DataContext="{Binding ProductManager, Source={StaticResource Locator}}">
    <Grid>
        <DataGrid ItemsSource="{Binding Products.Products}" SelectedItem="{Binding SelectedProduct}" ColumnWidth="*" HorizontalAlignment="Left" Margin="10,10,-17.4,-55.6" VerticalAlignment="Top" Height="316" Width="301"/>
        <Button Content="Voeg Product toe" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top" Width="110" Height="38" Click="Button_Click"/>
        <Button Command="{Binding DeleteProductCommand}" Content="Verwijder Product" HorizontalAlignment="Left" Margin="202,362,0,0" VerticalAlignment="Top" Width="110" Height="38"/>

    </Grid>
</Window>
